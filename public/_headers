# Home page - highest priority for SEO
/
  Cache-Control: public, max-age=1800, s-maxage=3600, stale-while-revalidate=86400
  X-Robots-Tag: index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1

# Article pages - high priority for SEO
/*/2025/*/*
  Cache-Control: public, max-age=7200, s-maxage=14400, stale-while-revalidate=86400
  X-Robots-Tag: index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1

# Category pages - medium priority
/#category/*
  Cache-Control: public, max-age=3600, s-maxage=7200, stale-while-revalidate=86400
  X-Robots-Tag: index, follow, max-snippet:-1, max-image-preview:large

# Static pages - lower priority
/#about
  Cache-Control: public, max-age=7200, s-maxage=14400, stale-while-revalidate=86400
  X-Robots-Tag: index, follow, max-snippet:-1

/#policy
  Cache-Control: public, max-age=7200, s-maxage=14400, stale-while-revalidate=86400
  X-Robots-Tag: index, follow, max-snippet:-1

# Static assets - hyper-optimized cache
/css/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css; charset=utf-8
  X-Content-Type-Options: nosniff
  Content-Encoding: gzip
  Accept-Ranges: bytes

/js/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript; charset=utf-8
  X-Content-Type-Options: nosniff
  Content-Encoding: gzip
  Accept-Ranges: bytes

# Images - medium cache
/images/*
  Cache-Control: public, max-age=2592000, s-maxage=31536000
  X-Content-Type-Options: nosniff

# Sitemap and robots - short cache
/sitemap.xml
  Cache-Control: public, max-age=3600, s-maxage=7200
  Content-Type: application/xml; charset=utf-8
  X-Robots-Tag: noindex

/robots.txt
  Cache-Control: public, max-age=3600, s-maxage=7200
  Content-Type: text/plain; charset=utf-8
  X-Robots-Tag: noindex