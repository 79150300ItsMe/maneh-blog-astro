  (function () {
    // Gunakan DOMPurify bila available
    window.__tt = {
      html: function (raw) {
        if (window.DOMPurify && DOMPurify.sanitize) {
          // Kembalikan TrustedHTML bila didukung
          try {
            return DOMPurify.sanitize(raw, { RETURN_TRUSTED_TYPE: true });
          } catch(e) {
            // fallback string bersih
            return DOMPurify.sanitize(raw);
          }
        }
        return raw;
      },
      scriptURL: function (url) { return url; }
    };

    if (window.trustedTypes && trustedTypes.createPolicy) {
      try {
        window.__ttPolicy = trustedTypes.createPolicy('maneh', {
          createHTML: (s) => window.__tt.html(s),
          createScriptURL: (u) => window.__tt.scriptURL(u)
        });
      } catch(e) {
        // policy mungkin sudah ada; abaikan
      }
    }
  })();
</script>

<script>
  // Normalize path on boot - treat /index.html same as /
  function normalizePathOnBoot() {
    const currentPath = location.pathname;
    console.log('🔍 Current path:', currentPath);
    
    if (currentPath.endsWith('/index.html')) {
      console.log('🔄 Normalizing /index.html to /');
      const newPath = currentPath.replace(/\/index\.html$/, '/');
      history.replaceState(null, '', newPath);
      console.log('✅ Path normalized to:', newPath);
    }
  }
  
  // Wait for DOM and scripts to load, then initialize
  document.addEventListener('DOMContentLoaded', function() {
    console.log('🔄 DOM loaded, normalizing path...');
    
    // Normalize path first
    normalizePathOnBoot();
    
    console.log('🔄 Waiting for scripts...');
    
    // Wait for both data.js and script.js to load
    const checkScripts = () => {
      if (typeof ARTICLES !== 'undefined' && typeof I18N !== 'undefined') {
        console.log('✅ All scripts loaded successfully');
        console.log('ARTICLES:', ARTICLES.length);
        console.log('I18N:', 'loaded');
        
        // Initialize blog after scripts are loaded
        if (typeof initializeBlog === 'function') {
          initializeBlog();
        }
        
        // Run initial route (renderRoute) - only once after data is ready
        if (typeof route === 'function') {
          console.log('🚀 Running initial route...');
          route();
        }
      } else {
        console.log('⏳ Waiting for scripts to load...');
        setTimeout(checkScripts, 100);
      }
    };
    
    checkScripts();
  });
</script>

